---
const API_KEY = import.meta.env.NEWS_API_KEY

const FETCH_URL = `https://newsapi.org/v2/everything?q=economia&apiKey=${API_KEY}language=es`

const response = await fetch(FETCH_URL)
const articles = (await response.json()).articles
---

<div>
    <h1 class="text-2xl font-bold">Articles list</h1>

    <ul>
        {
            articles.map(({ title, url }) => {
                return (
                    <li class="list-disc">
                        <a href={url}>{title}</a>
                    </li>
                )
            })
        }
    </ul>
</div>
